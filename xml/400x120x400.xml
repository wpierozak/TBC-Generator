<?xml version="1.0"?>
<Configuration>

    <dimX>400</dimX> 
    <dimY>120</dimY>
    <dimZ>400</dimZ>

    <output_dir>../res/</output_dir>

    <output_filename>400x120x400</output_filename>

    <ms_file_format>xyz</ms_file_format>

    <neighbourhood>   
        <x0>-1</x0>
        <x1>1</x1>

        <y0>-1</y0>
        <y1>-1</y1>

        <z0>-1</z0>
        <z1>1</z1>
    </neighbourhood>

    <grains_number>2000</grains_number>

    <Grain>    
       <radius>    
            <mean>3</mean>
            <std>1</std>
            <max>6</max>
            <min>3</min>
        </radius>

        <tilt>  <!-- degrees -->
            <mean>0</mean>
            <std>4</std>
        </tilt>

        <length> 
            <mean>110</mean>
            <std>5</std>
        </length>

        <top_frac>
            <mean>0.15</mean>
            <std>0.01</std>
        </top_frac>

        <widen> <!-- degrees -->
            <mean>2</mean>
            <std>1</std>
            <max>5</max>
            <min>0</min>
        </widen>

        <resolution>LOW</resolution>
    </Grain>

    <threads_number>12</threads_number>

</Configuration>