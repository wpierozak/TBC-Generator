<?xml version="1.0"?>
<Configuration>

    <dimX>100</dimX>
    <dimY>400</dimY>
    <dimZ>100</dimZ>

    <output_dir>../res/3D</output_dir>

    <output_filename>test</output_filename>

    <ms_file_format>xyz</ms_file_format>

    <neighbourhood mode="box">   
        <x0>-2</x0>
        <x1>2</x1>

        <y0>-2</y0>
        <y1>0</y1>

        <z0>-2</z0>
        <z1>2</z1>
    </neighbourhood>

    <grains_number>30</grains_number>

    <Grain>    
        <ref_radius>8</ref_radius>

        <!-- In degrees -->
        <max_tilt>3</max_tilt>

        <!-- In degrees -->
        <min_tilt>0</min_tilt>

        <!-- In degrees -->
        <max_angle_of_widen>6</max_angle_of_widen>

        <!-- As % of total length -->
        <smooth_region_length></smooth_region_length>

        <!-- In % of total length -->
        <smooth_region_length_var><smooth_region_length_var>

        <!-- As % of total length -->
        <feathered_region_length></feathered_region_length>

        <!-- In % of total length -->
        <feathered_region_length_var></feathered_region_length_var>

        <!-- As % of total length -->
        <top_region_length></top_region_length>

        <!-- In % of total length -->
        <top_region_lenght_var></top_region_lenght_var>

        <min_length></min_length>

        <max_length></max_length>

        <total_number></total_number>
    </Grain>

    <threads_number>12</threads_number>

    <boundry_conditions>absorption</boundry_conditions>

</Configuration>