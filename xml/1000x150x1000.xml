<?xml version="1.0"?>
<Configuration>

    <dimX>1000</dimX> <!-- micrometers -->
    <dimY>150</dimY>
    <dimZ>1000</dimZ> <!-- micrometers -->

    <output_dir>../res/</output_dir>

    <output_filename>1000x150x1000</output_filename>

    <ms_file_format>xyz</ms_file_format>

    <neighbourhood>   
        <x0>-1</x0>
        <x1>1</x1>

        <y0>-1</y0>
        <y1>-1</y1>

        <z0>-1</z0>
        <z1>1</z1>
    </neighbourhood>

    <grains_number>10000</grains_number>

    <Grain>    
       <radius>    <!-- micrometers -->
            <mean>3</mean>
            <std>2</std>
            <min>2</min>
            <max>8</max>
        </radius>

        <tilt>  <!-- degrees -->
            <mean>0</mean>
            <std>4</std>
        </tilt>

        <length> <!-- micrometers -->
            <mean>110</mean>
            <std>10</std>
        </length>

        <top_frac>
            <mean>0.15</mean>
            <std>0.01</std>
        </top_frac>

        <widen> <!-- degrees -->
            <mean>3</mean>
            <std>1</std>
        </widen>

        <resolution>LOW</resolution>
    </Grain>

    <threads_number>12</threads_number>

</Configuration>