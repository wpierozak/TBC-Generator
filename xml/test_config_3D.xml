<?xml version="1.0"?>
<Configuration>
    <dimX>500</dimX>
    <dimY>500</dimY>
    <dimZ>500</dimZ>
    <output_file>../res/output</output_file>
   <neighbourhood mode="degrees">   
        <alpha>75</alpha>
        <beta>15</beta>
        <radius>3</radius>
    </neighbourhood>
    <fill_base>true</fill_base>
    <base_neighbourhood size="8">
        <nb dx="1"      dy="0"      dz="1"/>
        <nb dx="0"      dy="0"      dz="1"/>
        <nb dx="-1"     dy="0"      dz="1"/> 
        <nb dx="1"      dy="0"      dz="0"/>
        <nb dx="-1"     dy="0"      dz="0"/>
        <nb dx="1"      dy="0"      dz="-1"/>
        <nb dx="0"      dy="0"      dz="-1"/>
        <nb dx="-1"     dy="0"      dz="-1"/>
    </base_neighbourhood>
    <grains_number>100</grains_number>
    <base_radius>10</base_radius>
    <threads_number>12</threads_number>
</Configuration>
