<?xml version="1.0"?>
<Configuration>

    <Space>
        <dimX>100</dimX> 
        <dimY>150</dimY>
        <dimZ>100</dimZ>
    </Space>

    <Output>
        <filename>/home/evaluation-tuned</filename>
        <format>xyz</format>
    </Output>

    <Time>
        <dt>0.5</dt>
    </Time>

    <Front>
        <vb>0.25</vb>
    </Front>

    <Neighbourhood>   
        <x0>-1</x0>
        <x1>1</x1>

        <y0>-1</y0>
        <y1>1</y1>

        <z0>-1</z0>
        <z1>1</z1>
    </Neighbourhood>

    <!-- Asin(BX) + Ccos(Dx) + Esin(Fz) + Gcos(Hz) + Z -->
    <Bond>
        <A>1</A>
        <Z>8</Z>
    </Bond>
    
    <Layer> 
        <grains_number>500</grains_number>    
        <height>120</height>
        <alpha_g>3.3925</alpha_g>
        <alpha_t>3.0</alpha_t>
        <tilt_stddev>15</tilt_stddev>
        <anisotropy>10</anisotropy>
        <diffusion>0.04</diffusion>

        <prefered_orientation>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </prefered_orientation>

    </Layer>
    
    <Parallel>
        <cpu_threads>12</cpu_threads>
    </Parallel>
</Configuration>
